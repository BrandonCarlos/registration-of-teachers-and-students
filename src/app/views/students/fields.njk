<div class="item-wraper">
  <div class="item">
    <div>Avatar_URL</div>
    <input type="url" name="avatar_url" placeholder="https://" value="{{student.avatar_url}}">
  </div>

  <div class="item">
    <div>Nome do studante</div>
    <input type="text" name="name" placeholder="Digite o nome do professor" value="{{student.name}}">
  </div>

  <div class="item">
    <div>Data de nascimento</div>
    <input type="date" name="birth" value="{{student.birth}}">
  </div>

  <div class="item">
    <div>Email</div>
    <input type="email" name="email" placeholder="Digite seu e-mail" value="{{student.email}}">
  </div>

  <div class="item">
    <div>Ano escolar</div>
    <select name="education">
      <option disabled="disabled" selected="selected" value="value">Escolha uma opção</option>
      <option value="5EF" {% if student.education == '5EF' %} selected="selected" {% endif %}>5° Ano Ensino Fundamental</option>
      <option value="6EF" {% if student.education == '6EF' %} selected="selected" {% endif %}>6° Ano Ensino Fundamental</option>
      <option value="7EF" {% if student.education == '7EF' %} selected="selected" {% endif %}>7° Ano Ensino Fundamental</option>
      <option value="8EF" {% if student.education == '8EF' %} selected="selected" {% endif %}>8° Ano Ensino Fundamental</option>
      <option value="9EF" {% if student.education == '9EF' %} selected="selected" {% endif %}>9° Ano Ensino Fundamental</option>
      <option value="1EM" {% if student.education == '1EM' %} selected="selected" {% endif %}>1° Ano Ensino Médio</option>
      <option value="2EM" {% if student.education == '2EM' %} selected="selected" {% endif %}>2° Ano Ensino Médio</option>
      <option value="3EM" {% if student.education == '3EM' %} selected="selected" {% endif %}>3° Ano Ensino Médio</option>
    </select>
  </div>

  <div class="item">
    <div>Carga horária semanal</div>
    <input type="number" name="weekly_classes" placeholder="Digite somente o número" value="{{student.weekly_classes}}">
  </div>
</div>