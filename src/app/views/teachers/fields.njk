<div class="item-wraper">
        <div class="item">
          <div>Avatar_URL</div>
          <input type="url" name="avatar_url" placeholder="https://" value="{{teacher.avatar_url}}">
        </div>

        <div class="item">
          <div>Nome do professor</div>
          <input type="text" name="name" placeholder="Digite o nome do professor" value="{{teacher.name}}">
        </div>

        <div class="item">
          <div>Data de nascimento</div>
          <input type="date" name="birth" value="{{teacher.birth}}">
        </div>

        <div class="item">
          <div>Grau de escolaridade</div>
          <select name="education">
            <option disabled="disabled" selected="selected" value="value">Selecione uma opção...</option>
            <option value="medio" {% if teacher.education == "medio" %} selected="selected" {% endif %}>Ensino Médio Completo</option>
            <option value="superior" {% if teacher.education == "superior" %} selected="selected" {% endif %}>Ensino Superior Completo</option>
            <option value="mestrado" {% if teacher.education == "mestrado" %} selected="selected" {% endif %}>Mestrado</option>
            <option value="doutorado" {% if teacher.education == "doutorado" %} selected="selected" {% endif %}>Doutorado</option>
          </select>
        </div>

        <div class="item">
          <div>Tipo de aula</div>
          <span><input type="radio" name="class_type" checked="checked" value="presencial" {% if teacher.class_type == "presencial" %} checked="checked" {% endif %}>Presencial</span>
          <span><input type="radio" name="class_type" value="ead" {% if teacher.class_type == "ead" %} checked="checked" {% endif %}>Ead</span>
        </div>

        <div class="item">
          <div>Área de atuação</div>
          <input type="text" name="services" placeholder="Separe os serviços prestados por virgula" value="{{teacher.services}}">
        </div>
      </div>