{% extends 'layout.njk' %}

{% block content %}

  <div class="card">
    <section class="avatar_url" style="background: url(https://source.unsplash.com/collection/8874679/500x500) no-repeat center center / cover; border-radius: 4px 0 0 4px;"></section>

    <section class="details">
      <h3>Detalhes</h3>

      <div class="item-wraper">
        <div class="item">
          <div>Professor</div>
          <div>{{teacher.name}}</div>
        </div>

        <div class="item">
          <div>Idade</div>
          <div>{{teacher.age}}</div>
        </div>

        <div class="item">
          <div>Grau de escolaridade</div>
          <div>{{teacher.education}}</div>
        </div>

        <div class="item">
          <div>Tipo de aula</div>
          <div>{{teacher.class_type}}</div>
        </div>

        <div class="item">
          <div>Acompanhamento</div>
          <div>
            {% for service in teacher.services %}
              <span>{{service}}</span>
            {% endfor %}
          </div>
        </div>

        <div class="item">
          <div>Desde</div>
          <div>{{teacher.created_at}}</div>
        </div>
      </div>

      <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>

    </section>

  </div>

{% endblock content %}